<%= form_for @classroom, :html => { :class => "form-horizontal classroom" } do |f| %>

  <% if @classroom.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@classroom.errors.count, "error") %> prohibited this classroom from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @classroom.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :student_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :student_id, options_from_collection_for_select(Student.all, :id, :name), { prompt: t("select_one") }, { class: 'form-control', required: "required" } %>
    </div>
    <%=f.error_span(:student_id) %>
  </div>
  <div class="form-group">
    <%= f.label :course_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :course_id, options_from_collection_for_select(Course.all, :id, :name), { prompt: t("select_one") }, { class: 'form-control', required: "required" } %>
    </div>
    <%=f.error_span(:course_id) %>
  </div>
  <div class="form-group">
    <%= f.label :entry_at, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :entry_at, :class => 'form-control', required: "required" %>
    </div>
    <%=f.error_span(:entry_at) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                classrooms_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
