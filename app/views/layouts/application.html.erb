              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>

            <a class="navbar-brand" href="/">Internetsistemas Back End</a>
          </div>

          <div class="collapse navbar-collapse" id="js-navbar-collapse">

            <ul class="nav navbar-nav">
              <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Matricula", root_path %></li>
              <li class="<%= 'active' if current_page?(students_path) %>"><%= link_to('Students', students_path) %></a></li>
              <li class="<%= 'active' if current_page?(courses_path) %>"><%= link_to('Courses', courses_path) %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

<div class="container">
